@model Order

<h2>Are you sure you want to delete this order?</h2>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="OrderID" />

    <p><strong>Customer Name:</strong> @Model.CustomerName</p>
    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Delivery Option:</strong> @Model.DeliveryOptionID</p>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
